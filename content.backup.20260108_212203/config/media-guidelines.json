    "Monterosso": {
      "description": "The largest village with sandy beaches and resort feel",
      "search_queries": [
        "Monterosso beach Cinque Terre",
        "Monterosso old town Fegina",
        "Monterosso Giant statue Neptune",
        "Monterosso beach umbrellas",
        "Monterosso lemon groves"
      ],
      "iconic_shots": [
        "Beach with colorful umbrellas",
