      "search_queries": [
        "Riomaggiore colorful houses cliff",
        "Riomaggiore harbor sunset",
        "Riomaggiore marina fishing boats",
        "Riomaggiore terraced vineyards",
        "Riomaggiore Via Colombo street"
      ],
      "iconic_shots": [
        "View from the main road above the village",
        "Colorful houses reflected in harbor water",
        "Sunset over the marina",
        "Looking up from the harbor"
      ],
      "colors": "Pink, ochre, yellow houses against blue sea",
      "best_light": "Sunset (west-facing harbor)"
    },
    "Manarola": {
      "description": "Famous for wine terraces and Christmas lights nativity",
      "search_queries": [
        "Manarola village view classic",
        "Manarola terraces vineyards",
        "Manarola harbor boats sunset",
        "Manarola church San Lorenzo",
        "Manarola Punta Bonfiglio viewpoint"
      ],
      "iconic_shots": [
        "Classic postcard view from Punta Bonfiglio",
        "Terraced hillside with colorful houses",
        "Sunset reflection in the small harbor",
        "Via Discovolo wine bars"
      ],
      "colors": "Pastel palette - pink, coral, yellow, green",
      "best_light": "Golden hour from the south viewpoint"
    },
    "Corniglia": {
      "description": "The hidden hilltop village - only one not at sea level",
      "search_queries": [
