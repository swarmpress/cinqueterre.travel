{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Cinque Terre Media Guidelines",
  "description": "Image search queries, style guidelines, and asset specifications for MediaAgent",
  "version": "1.0.0",

  "brand_visual_identity": {
    "description": "Visual style for Cinque Terre Dispatch",
    "mood": "Warm, Mediterranean, editorial luxury, authentic",
    "color_palette": {
      "primary": ["Ochre", "Terracotta", "Mediterranean Blue", "Olive Green"],
      "accent": ["Coral", "Golden Hour Yellow", "Sea Foam"],
      "neutrals": ["Stone", "Parchment", "Slate"]
    },
    "photography_style": {
      "lighting": "Golden hour, soft natural light, dappled shadows",
      "composition": "Editorial, documentary-style, atmospheric",
      "avoid": ["Over-saturated colors", "Tourist selfie angles", "Generic stock poses"],
      "prefer": ["Authentic moments", "Architectural details", "Local life", "Intimate scenes"]
    },
    "image_treatments": {
      "hero_images": "High contrast, cinematic, wide aspect ratio",
      "gallery_images": "Consistent white balance, natural colors",
      "editorial_portraits": "Environmental, contextual, not studio"
    }
  },

  "village_imagery": {
